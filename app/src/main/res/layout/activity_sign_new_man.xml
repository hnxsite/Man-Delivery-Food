<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    tools:context=".SignNewManActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/hacen_beirut_bight"
        android:text="تسجيل مركبتي"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/tomato_topcorners">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <Button
                android:id="@+id/selectImagevehButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/uploadimage_border"
                android:fontFamily="@font/hacen_beirut_bight"
                android:text="اختيار صورة المركبة"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/selectedImageVeh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/etnumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/field_border"
                android:fontFamily="@font/hacen_beirut_bight"
                android:gravity="right"
                android:hint="الهاتف"
                android:inputType="number"
                android:minHeight="48dp"
                android:padding="10dp" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/field_border"
                android:fontFamily="@font/hacen_beirut_bight"
                android:gravity="right"
                android:hint="اسم صاحب المركبة"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:padding="10dp" />

            <EditText
                android:id="@+id/etDescriptionveh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/field_border"
                android:fontFamily="@font/hacen_beirut_bight"
                android:gravity="right"
                android:hint="وصف المركبة"
                android:inputType="textMultiLine"
                android:minHeight="48dp"
                android:padding="10dp" />

            <EditText
                android:id="@+id/etplacesveh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/field_border"
                android:fontFamily="@font/hacen_beirut_bight"
                android:gravity="right"
                android:hint="العنوان (بلدية/حي)"
                android:inputType="text"
                android:minHeight="48dp"
                android:padding="10dp" />

<!--            <Button-->
<!--                android:id="@+id/GPSButton"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_centerHorizontal="true"-->
<!--                android:layout_marginBottom="10dp"-->
<!--                android:background="@drawable/uploadimage_border"-->
<!--                android:fontFamily="@font/hacen_beirut_bight"-->
<!--                android:text="تحديد الموقع GPS"-->
<!--                android:textColor="@color/black"-->
<!--                android:textStyle="bold" />-->
            <ImageView
                android:id="@+id/selectedVehID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />

            <Button
                android:id="@+id/VehIDButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:background="@drawable/uploadimage_border"
                android:fontFamily="@font/hacen_beirut_bight"
                android:text="ارفاق نسخة من وثائق السيارة"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <Button
                android:id="@+id/CardIDButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:background="@drawable/uploadimage_border"
                android:fontFamily="@font/hacen_beirut_bight"
                android:text="ارفاق نسخة من بطاقة التعريف"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/selectedCardID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />
            <Button
                android:id="@+id/btnsendinfoveh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/tomato_button"
                android:fontFamily="@font/hacen_beirut_bight"
                android:text="إرسال الطلب"
                android:textColor="@color/black"
                android:textStyle="bold" />


        </LinearLayout>

    </ScrollView>


</LinearLayout>
